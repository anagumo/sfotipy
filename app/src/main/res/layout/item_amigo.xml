<?xml version="1.0" encoding="utf-8"?>

 <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="4dp"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatar_amigo"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/nombre_amigo"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/avatar_amigo"
            android:layout_toEndOf="@+id/avatar_amigo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/twitter_amigo"
            android:layout_below="@+id/nombre_amigo"
            android:layout_toRightOf="@+id/avatar_amigo"
            android:layout_toEndOf="@+id/avatar_amigo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/ultimcancion_amigo"
            android:layout_below="@+id/twitter_amigo"
            android:layout_toRightOf="@+id/avatar_amigo"
            android:layout_toEndOf="@+id/avatar_amigo"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>