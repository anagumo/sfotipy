<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="4dp"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/record_song"
            android:src="@drawable/song"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/title_song"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/record_song"
            android:layout_toEndOf="@+id/record_song" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/band_song"
            android:layout_below="@+id/title_song"
            android:layout_toRightOf="@+id/record_song"
            android:layout_toEndOf="@+id/record_song" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_below="@+id/band_song"
            android:layout_toRightOf="@+id/record_song"
            android:layout_toEndOf="@+id/record_song" />
    </RelativeLayout>

</android.support.v7.widget.CardView>